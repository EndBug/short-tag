{
  "name": "short-tag",
  "version": "1.0.0",
  "description": "GitHub Action to automatically generate a \"short tag\" for your releases",
  "main": "lib/main.js",
  "scripts": {
    "build": "npm run compile && npm run compress && rm build/*.js",
    "compile": "tsc",
    "compress": "node-minify --compressor babel-minify --input build/*.js --output lib/main.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EndBug/short-tag.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "tags",
    "tag"
  ],
  "author": "Federico Grandi <fgrandi30@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EndBug/short-tag/issues"
  },
  "homepage": "https://github.com/EndBug/short-tag#readme",
  "devDependencies": {
    "@node-minify/babel-minify": "^5.2.0",
    "@node-minify/cli": "^5.2.0",
    "@types/node": "^12.12.8",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@actions/core": "^1.2.0",
    "octonode": "^0.9.5",
    "semver-regex": "^3.1.0"
  }
}
